{
  "name": "wip-bot",
  "version": "0.0.0-development",
  "description": "",
  "main": "index.js",
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "deploy": "scripts/deploy.sh",
    "start": "probot run ./index.js",
    "now-start": "PRIVATE_KEY=$(echo $PRIVATE_KEY | base64 -d) npm start",
    "test": "jest",
    "test:watch": "jest . --watch",
    "pretest": "npm run lint",
    "lint": "standard",
    "semantic-release": "semantic-release"
  },
  "standard": {
    "globals": [
      "jest",
      "it",
      "expect",
      "describe"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gr2m/wip-bot.git"
  },
  "keywords": [
    "probot",
    "probot-plugin"
  ],
  "author": "Gregor Martynus (https://github.com/gr2m)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/gr2m/wip-bot/issues"
  },
  "homepage": "https://github.com/gr2m/wip-bot#readme",
  "dependencies": {
    "probot": "^4.0.0"
  },
  "jest": {
    "testRegex": "/test/unit/.+\\.test\\.js$"
  },
  "devDependencies": {
    "jest": "^22.3.0",
    "localtunnel": "^1.8.3",
    "semantic-release": "^12.2.2",
    "standard": "^11.0.0"
  },
  "engines": {
    "node": "8"
  },
  "now": {
    "alias": "wip-bot",
    "env": {
      "APP_ID": "@wip-bot-app-id",
      "NODE_ENV": "production",
      "PRIVATE_KEY": "@wip-bot-private-key",
      "WEBHOOK_SECRET": "@wip-bot-webhook-secret"
    }
  }
}
